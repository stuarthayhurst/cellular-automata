{
    "plugins": ["prettier-plugin-svelte"],
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "overrides": [
        {
            "files": ["**/*.html", "**/*.css"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "**/*.svelte",
            "options": {
                "parser": "svelte",
                "bracketSameLine": true
            }
        },
        {
            "files": "**/*.yml",
            "options": {
                "singleQuote": true,
                "tabWidth": 2
            }
        }
    ]
}
